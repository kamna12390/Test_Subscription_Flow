<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SubscriptionBackgroundFlow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppThemeSubscription" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>

        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/nav_color</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>
    <style name="Theme.SubscriptionBackgroundFlow.AdAttributionTest">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#787878</item>
        <item name="android:textSize">@dimen/_6ssp</item>
        <item name="android:text">AD</item>
<!--        <item name="background">@drawable/bg_ad_icon_native</item>-->
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:width">@dimen/_18sdp</item>
        <item name="android:height">@dimen/_11sdp</item>
    </style>
    <style name="moreAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#7F59E8</item>
        <item name="colorPrimaryDark">#7F59E8</item>
        <item name="colorAccent">#7F59E8</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#ffffff</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@null</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>

    </style>

    <style name="DialogFragmentTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>
</resources>