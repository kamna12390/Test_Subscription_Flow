<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="@dimen/_13sdp"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.demo.subscriptionbackgroundflow.myadslibrary.widgets.SquareImageView
                android:id="@+id/imgAppIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.demo.subscriptionbackgroundflow.myadslibrary.widgets.SquareImageView
                android:id="@+id/ad_lable"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_alignBottom="@id/imgAppIcon"
                android:layout_alignParentRight="true"
                android:alpha=".35"
                android:scaleType="fitXY"
                android:src="@drawable/ads_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/colorPick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_retry"
                android:layout_width="match_parent"
                android:background="#FFFFFF"
                android:visibility="gone"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="0dp"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:background="@drawable/bg_retry_icon"
                    android:src="@drawable/ic_retry"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/appName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_24sdp"
        android:layout_below="@+id/cardView1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="DSLR Blur"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/cardView1" />


</androidx.constraintlayout.widget.ConstraintLayout>