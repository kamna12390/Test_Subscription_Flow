<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.demo.subscriptionbackgroundflow">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.SubscriptionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeSubscription" />
        <activity
            android:name=".activity.SubscriptionBackgroundActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeSubscription" />
        <activity
            android:name=".activity.PrivacyPolicyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeSubscription"/>
        <activity
            android:name=".activity.TermsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeSubscription"/>
        <activity
            android:name=".myadslibrary.ui.MoreAppActivity"
            android:screenOrientation="portrait"
            android:theme="@style/moreAppTheme" />
        <activity
            android:name=".myadslibrary.ui.MoreAppActivityNew"
            android:screenOrientation="portrait"
            android:theme="@style/moreAppTheme" />

        <activity
            android:name=".myadslibrary.ui.AdActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".myadslibrary.ui.NewMoreAppActivity"
            android:screenOrientation="portrait"
            android:theme="@style/moreAppTheme"/>

        <receiver android:exported="true"
            android:name=".myadslibrary.receiver.NetworkChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>