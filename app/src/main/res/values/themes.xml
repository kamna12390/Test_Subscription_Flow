<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestSubscriptionFlow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.TestSubscriptionFlow.AdAttribution">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#787878</item>
        <item name="android:textSize">@dimen/_6ssp</item>
        <item name="android:text">AD</item>
<!--        <item name="background">@drawable/bg_ad_icon_native</item>-->
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:width">@dimen/_18sdp</item>
        <item name="android:height">@dimen/_11sdp</item>
    </style>
</resources>